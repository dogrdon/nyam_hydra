<h1>Listing books</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%- book.author.each do |author| %><p><%= author %></p><% end %></td>
        <td><%= book.published %></td>
        <td><%= link_to 'Show', book, class: "btn btn-default", role: "button"%></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: "btn btn-default", role: "button" %></td>
        <td><%= link_to 'Destroy', book, class: "btn btn-default", role: "button", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

